[
%% sample pool config
{riak_pool, [
    %% This param make a hint to pool balancer what app name should it choose
    %% when app name is not provided explicitly nor via application:get_name/0.
    {default_app, my_super_app},
    {pools, [
        {my_super_app, [
            {node1, [
                {pool_size, 10},
                {max_overflow, 10},
                {host, "127.0.0.1"},
                {port, 8087},
                {queue_if_disconnected, false},
                {auto_reconnect, true}
            ]},
            {node2, [
                {pool_size, 10},
                {max_overflow, 10},
                {host, "127.0.0.2"},
                {port, 8087},
                {queue_if_disconnected, false},
                {auto_reconnect, true}
            ]}
        ]},
        {another_super_app, [
            {node3, [
                {pool_size, 10},
                {max_overflow, 10},
                {host, "127.0.0.3"},
                {port, 8087},
                {queue_if_disconnected, false},
                {auto_reconnect, true}
            ]}
        ]}
    ]}
]}

].
