           %     {max_overflow, 10},
           %     {host, "127.0.0.1"},
           %     {port, 8087},
					 % 		 {queue_if_disconnected, true},
					 % 		 {auto_reconnect, true}
           % ]}
        ]}
  ]}
 ]}.
